<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.SearchFlightActivity">

    <include layout="@layout/main_title_bar" />


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/planebanner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_login_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="From"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text35sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_reversal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/reversal" />


            <EditText
                android:id="@+id/et_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:hint="To"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/text35sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textColor="@color/black"
                android:textSize="@dimen/text30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="星期一"
                android:textColor="@color/grey"
                android:textSize="@dimen/text20sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@color/purple" />

        <RadioGroup
            android:id="@+id/rg_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:padding="5dp">


            <RadioButton
                android:id="@+id/rb_child"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="带儿童"
                android:textColor="@color/black"
                android:textSize="@dimen/text25sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_baby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="带婴儿"
                android:textColor="@color/black"
                android:textSize="@dimen/text25sp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:id="@+id/btn_search"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_login_btn"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="@dimen/text25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_rotate"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:src="@drawable/rotate"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_wait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="正在加载，请耐心等待....."
        android:visibility="gone" />

    <include layout="@layout/item_search_bottom" />

</LinearLayout>